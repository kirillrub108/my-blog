{% extends "base.twig" %}

{% block body %}
    <div class="container">
        {% if post.image_path is not null %}
            <img src="{{ asset_url(post.image_path) }}" class="img-fluid mt-2" alt="{{ post.title|escape }}">
        {% endif %}
        <h1 class="mt-3 mb-3 post-title">{{ post.title|escape }}</h1>
        <div class="container mb-3">
            <div class="row">
                <div class="col-md-4">
                    <span class="post-date">Кирилл Рубец | {{ post.published_date|date("F d, Y") }}</span>
                </div>
                <div class="col-md-8">
                    <a href=" {{ post.repo_url }} " target="_blank" class="text-decoration-none repo_url fs-4">Репозиторий с проектом</a>
                </div>
            </div>
        </div>
        <div class="text fs-4">
            {{ post.content|raw }}
        </div>
    </div>
{% endblock %}