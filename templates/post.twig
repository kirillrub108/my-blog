{% extends "base.twig" %}

{% block body %}
    <div class="container">
        {% if post.image_path is not null %}
            <img src="{{ asset_url(post.image_path) }}" class="img-fluid mt-2" alt="{{ post.title|escape }}">
        {% endif %}
        <h1 class="mt-3 mb-3 post-title">{{ post.title|escape }}</h1>
        <div class="container mb-3">
            <div class="row">
                <span class="post-date">Kirill Rubets | {{ post.published_date|date("F d, Y") }}</span>
            </div>
        </div>
        <div class="text">
            {{ post.content|raw }}
        </div>
    </div>
{% endblock %}