{% extends 'base.twig' %}

{% block body %}
<h1 class="text-center mt-5">Введите логин и пароль</h1>
<div class="container mt-4 col-md-4">
    <form action="/AdminLogin" method="post">
        <input class="form-control form-control-lg" type="text" name="login" placeholder="Логин" aria-label=".form-control-lg example">
        <input class="form-control form-control-lg my-3" type="password" name="password" placeholder="Пароль" aria-label=".form-control-lg example">
        <input type="submit" class="btn btn-success" value="Войти">
    </form>
</div>
{% endblock %}